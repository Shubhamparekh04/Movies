    <div class="page">
      
      <!-- Slider Section (Displays All Slider Images) -->
      <div class="row">
        <div class="col-md-12">
          <div class="slider">
            <ul class="slides">
              <% movies.forEach((movie) => { %>
                <li style="text-align: center;">
                  <a href="#"><img style="object-fit: contain;" src="/<%= movie.slider %>" alt="<%= movie.moviename %>"></a>
                  <h4 style="font-size: 16px; font-weight: bold; margin-top: 5px; color: rgb(0, 0, 0);"><%= movie.moviename %></h4>
                </li>
              <% }) %>
            </ul>
          </div>
        </div>
      </div> <!-- .row -->

      <!-- Thumbnails Section (Displays All Movie Thumbnails) -->
