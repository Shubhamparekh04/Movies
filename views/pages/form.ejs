<%- include("../partials/header")%>

<!-- ============================================================== -->
<!-- End Left Sidebar - style you can find in sidebar.scss  -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper">
  <!-- ============================================================== -->
  <!-- Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex no-block align-items-center">
        <h4 class="page-title">Movies Info</h4>
        <div class="ms-auto text-end">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">
                Add Movies details
              </li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <!-- ============================================================== -->
  <!-- End Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <!-- ============================================================== -->
  <!-- Container fluid  -->
  <!-- ============================================================== -->
  <div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <form
            class="form-horizontal w-50"
            method="post"
            action="/create"
            enctype="multipart/form-data"
          >
            <div class="card-body">
              <div class="form-group row">
                <label
                  for="mname"
                  class="col-sm-3 text-end control-label col-form-label"
                  >Movie Name</label
                >
                <div class="col-sm-9">
                  <input
                    type="text"
                    class="form-control"
                    id="mname"
                    name="moviename"
                    placeholder="Movie Name Here"
                    required
                  />
                </div>
              </div>

              <div class="form-group row">
                <label
                  for="thumb"
                  class="col-sm-3 text-end control-label col-form-label"
                  >Thumbnail</label
                >
                <div class="col-sm-9">
                  <input
                    type="file"
                    class="form-control"
                    id="thumb"
                    name="thumbnail"
                    required
                  />
                </div>
              </div>

              <div class="form-group row">
                <label
                  for="slider"
                  class="col-sm-3 text-end control-label col-form-label"
                  >Slider</label
                >
                <div class="col-sm-9">
                  <input
                    type="file"
                    class="form-control"
                    id="slider"
                    name="slider"
                    required
                  />
                </div>
              </div>

              <div class="form-group row">
                <label
                  for="ryear"
                  class="col-sm-3 text-end control-label col-form-label"
                  >Release Year</label
                >
                <div class="col-sm-9">
                  <input
                    type="number"
                    name="releaseYear"
                    class="form-control"
                    id="ryear"
                    name="ryear"
                    min="1900"
                    max="2025"
                    required
                  />
                </div>
              </div>

              <div class="form-group row">
                <label
                  for="genre"
                  class="col-sm-3 text-end control-label col-form-label"
                  >Genre</label
                >

                <div class="col-sm-9">
                  <select name="genre" class="w-auto">
                    <option value="Action">Action</option>
                    <option value="Comedy">Comedy</option>
                    <option value="Drama">Drama</option>
                    <option value="Thriller">Thriller</option>
                  </select>
                </div>
              </div>

              <div class="form-group row">
                <label
                  for="genre"
                  class="col-sm-3 text-end control-label col-form-label"
                  >Cast</label
                >

                <div class="col-sm-9">
                  <textarea
                    class="form-control"
                    name="cast"
                    placeholder="Enter cast names, separated by commas"
                    required
                  ></textarea>
                </div>
              </div>

              <div class="form-group row">
                <label
                  for="genre"
                  class="col-sm-3 text-end control-label col-form-label"
                  >Star</label
                >
                <div class="col-sm-9">
                  <input name="rating" class="form-control" type="number" name="rating" step="1" min="1" max="5">
                </div>
              </div>

              <div class="form-group row">
                <label
                  for="cono1"
                  class="col-sm-3 text-end control-label col-form-label"
                  >Description</label
                >
                <div class="col-sm-9">
                  <textarea
                    class="form-control"
                    name="description"
                    required
                  ></textarea>
                </div>
              </div>
            </div>
            <div class="border-top">
              <div class="card-body">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- editor -->

    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Right sidebar -->
    <!-- ============================================================== -->
    <!-- .right-sidebar -->
    <!-- ============================================================== -->
    <!-- End Right sidebar -->
    <!-- ============================================================== -->
  </div>
  <!-- ============================================================== -->
  <!-- End Container fluid  -->
  <!-- ============================================================== -->
  <!-- ============================================================== -->
  <!-- footer -->
  <!-- ============================================================== -->

</div>
