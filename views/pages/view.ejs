<%- include("../partials/header.ejs")%>

<div class="page-wrapper">
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex no-block align-items-center">
        <h4 class="page-title">Movies List</h4>
        <div class="ms-auto text-end">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">
                View Movies Details
              </li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
          </div>
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>Movie Name</th>
                <th>Thumbnail</th>
                <th>Slider</th>
                <th>Release Year</th>
                <th>Genre</th>
                <th>Cast</th>
                <th>Rating</th>
                <th>Description</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% movies.forEach((movie, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= movie.moviename %></td>
                
                <!-- Thumbnail -->
                <td>
                  <% if (movie.thumbnail) { %>
                    <img src="/<%= movie.thumbnail %>" alt="Thumbnail" width="80">
                  <% } else { %>
                    <p>No Image</p>
                  <% } %>
                </td>

                <!-- Slider -->
                <td>
                  <% if (movie.slider) { %>
                    <img src="/<%= movie.slider %>" alt="Slider" width="200">
                  <% } else { %>
                    <p>No Image</p>
                  <% } %>
                </td>

                <td><%= movie.ryear %></td>
                <td><%= movie.genre %></td>
                <td><%= movie.cast %></td>
                <td><%= movie.rating %>‚≠ê</td>
                <td><%= movie.description %></td>

                <td>
                  <a href="/edit/<%= movie._id %>" class="btn btn-warning btn-sm">Edit</a>
                  <a href="/delete/<%= movie._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%- include("../partials/footer.ejs")%>
</div>
